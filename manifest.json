{
    "manifest_version": 3,
    "name": "Web Page Scraper",
    "version": "1.0",
    "description": "Scrapes web pages and downloads content as text file",
    "permissions": [
        "activeTab",
        "scripting",
        "downloads",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:5000/*",
        "http://127.0.0.1:5000/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
} 